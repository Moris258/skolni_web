datasource sqlite {
  url                  = env("DATABASE_URL")
  shadowDatabaseUrl    = env("SHADOW_DATABASE_URL")
  provider             = "sqlite"
  referentialIntegrity = "prisma"
}

generator client {
  provider        = "prisma-client-js"
  output          = "node_modules/.prisma/client"
  previewFeatures = ["referentialIntegrity"]
}

model User {
  id        String    @id @default(cuid())
  admin     Boolean   @default(false)
  name      String    @default("")
  username  String    @unique @default("")
  password  String
  posts     Post[]    @relation("Post_author")
  galleries Gallery[] @relation("Gallery_author")
}

model Post {
  id       String    @id @default(cuid())
  creation DateTime?
  author   User?     @relation("Post_author", fields: [authorId], references: [id])
  authorId String?   @map("author")
  title    String    @default("")
  country  String
  content  String    @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")

  @@index([authorId])
}

model Info {
  id      String @id @default(cuid())
  content String @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
}

model Photo {
  id                  String    @id @default(cuid())
  photo_filesize      Int?
  photo_extension     String?
  photo_width         Int?
  photo_height        Int?
  photo_id            String?
  from_Gallery_images Gallery[] @relation("Gallery_images")
}

model Gallery {
  id       String  @id @default(cuid())
  author   User?   @relation("Gallery_author", fields: [authorId], references: [id])
  authorId String? @map("author")
  country  String
  images   Photo[] @relation("Gallery_images")
  name     String  @default("")

  @@index([authorId])
}